include ../template/mixins

section.addTask(ng-show="showBlockTask")
    .addTaskTitle
        a.addTaskClose(href="#" ng-click="closeTaskPage()")
            .addTaskCloseBtn
                i.icons8-more
                p ESC
        p Create new task
    .addTaskNameContainer
        input.inputTaskName(type="text" placeholder="Task name" ng-model="taskNameAdd")
    .addTaskNameContainer
      input.inputTaskName(type="text" placeholder="Description" ng-model="taskDescriptionAdd")
    a.submitTaskBtn(href="#" ng-click="addTask()")
        .submitBtn(ng-click="closeTaskPage")
            i.icons8-checkmark